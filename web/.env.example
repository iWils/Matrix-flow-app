# Base de données
DATABASE_URL="postgresql://user:password@localhost:5432/matrix_flow"

# NextAuth
NEXTAUTH_SECRET="your-secret-key-min-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# Phase 2 - Cache Redis (optionnel mais recommandé pour les performances)
# En local: redis://localhost:6379
# En Docker: redis://redis:6379 
REDIS_URL="redis://redis:6379"

# Configuration email (optionnel)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM=""

# Configuration 2FA
TOTP_SECRET_KEY="your-totp-secret-key-32-chars"

# Mode de développement
NODE_ENV="development"

# Configuration de logging
LOG_LEVEL="info"

# Sécurité
BCRYPT_ROUNDS=12

# Sauvegarde automatique (optionnel)
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Rate limiting
RATE_LIMIT_ENABLED="true"
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100